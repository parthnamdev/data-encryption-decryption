<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Database</title>
    <!-- fontawesome -->
    <link rel="stylesheet" href="fontawesome-free/css/all.min.css">
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cabin:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- custom stylesheet -->
    <link rel="stylesheet" href="css/style.css">

</head>
<body>

    <div class="custom-padding">
        <a class="brand" href="/">MEDLYN</a>
        <h1 class="large-top-margin">All Patients</h1>
        
                <% if(patients.length == 0){ %>
                    <h5 class="mt-5">No patients found</h5>
                <% } else { %>
                 
        <table class="table mt-5">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">NAME</th>
                <th scope="col">APPLICATION ID</th>
                <th scope="col" colspan="3">OPERATIONS</th>
                </tr>
            </thead>
            <tbody>
                <% patients.forEach( (patient) => { %>   
              <tr>
                <th scope="row"><%= patients.indexOf(patient)+1 %></th>
                <td><%= patient.name %></td>
                <td><%= patient.applicationNumber %></td>
                <td><a class="" href="/edit/<%= patient._id %>" role="button" style='color:black;'><i class="far fa-edit "></i></a></td>
                <td><a class="" href="/view/<%= patient._id %>" role="button" style='color:black;'><i class="far fa-eye "></i></a></td>
                <td><a class="" onclick="deletePatient('<%= patient._id %>')" role="button" style='color:black;' data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="fas fa-trash"></i></a></td>
              </tr>
              <% }) %>
              <% } %>
              
            </tbody>
          </table>
            <a role="button" class="btn btn-outline-dark btn-lg mt-5 col-lg-2" href="/new">Add Patient</a>
            

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete patient</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    Are you sure you want to delete this patient?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a role="button" href="/" class="btn btn-danger" id="delete-btn">Delete</a>
                  </div>
                </div>
              </div>
            </div>

          
    </div>


    <script>
      function deletePatient(id) {
        let href = "/delete/" + id;
        const dbtn = document.getElementById("delete-btn");
        dbtn.href = href;
      }
    </script>
    <script src="https://kit.fontawesome.com/7b6c0285c8.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>